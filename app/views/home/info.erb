<div>
  <img src="<%= @info.profileImg.url %>" width="150px" height="200px" style="margin-left: auto; margin-right: auto; display: block">
  <p style="text-align:center"><%= @info.name %></p> 
  <p style="text-align:center">(<%= @info.job %>)</p>
</div>
<hr>
<% @info.infos.each do |i| %>
  <p><%= i.info %>  <a style="color: #365899;" href="<%= i.link %>" target="_blank">관련기사</a></p>
  
  
<% end %>

<% if user_signed_in? %>
  <a href="/home/create_info/<%= @info.id %>">정보입력</a>
  <a href="/home/modify/<%= @info.id %>">수정</a>
  <a href="/home/delete/<%= @info.id %>">삭제</a>
<% end %>

